<%# Navbar %>
<section class="hero gradient is-fullheight">
  <%- include("../partials/navbar.ejs") %>
  <%# Index header %>
  <div class="hero-body">
    <div class="container has-text-centered has-text-light animate__animated animate__fadeIn animate__faster">
      <img src="<%= bot.user.dynamicAvatarURL() %>" class="logo" alt="logo">
      <p class="is-size-2 has-text-weight-semibold"><%= bot.user.username %></p>
      <p class="control has-text-centered">
        <a class="button is-large is-white" href="/invite/">
          <span class="icon is-small">
            <i class="fa fa-plus"></i>
          </span>
          <span>Invite <%= bot.user.username %></span>
        </a>
      </p>
    </div>
  </div>

  <div class="hero-footer animate__animated animate__fadeInUp animate__faster">
    <div class="tabs is-centered is-fullwidth">
      <div class="container">
        <ul>
          <li><a href="#stats" class="has-text-light"><span class="icon is-small"><i class="fas fa-chart-bar"></i></span>Statistics</a></li>
          <li><a href="#features" class="has-text-light"><span class="icon is-small"><i class="fas fa-magic"></i></span>Features</a></li>
          <li><a href="#about" class="has-text-light"><span class="icon is-small"><i class="fas fa-info-circle"></i></span>About</a></li>
        </ul>
      </div>
    </div>
  </div>
</section>
