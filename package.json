{
  "private": "true",
  "name": "@hibikiapp/hibiki",
  "version": "4.0.0-alpha",
  "description": "The best all-in-one Discord bot.",
  "license": "MIT",
  "author": "Espi <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/sysdotini/hibiki#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/sysdotini/hibiki/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=6.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:static": "cross-env copyfiles './src/web/**/**/*.{css,liquid,jpg,js,png}' './dist/'",
    "dev": "nodemon ./src/index.ts",
    "format": "cross-env prettier --write './**/**/*.{css,cjs,js,json,sass,scss,liquid,md,mjs,toml,ts,yml}'",
    "prebuild": "cross-env rimraf ./dist/",
    "postbuild": "npm run build:static",
    "start": "npm run build && cross-env NODE_ENV=production node ./dist/src/index.js",
    "test": "cross-env tsc --noEmit && eslint . && prettier --c ."
  },
  "dependencies": {
    "@discordjs/rest": "^0.1.0-canary.0",
    "discord-api-types": "^0.25.2",
    "discord.js": "^13.3.1",
    "fastify": "^3.25.1",
    "fastify-accepts": "^2.1.0",
    "fastify-cookie": "^5.4.0",
    "fastify-cors": "^6.0.2",
    "fastify-csrf": "^3.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-secure-session": "^3.0.0",
    "fastify-static": "^4.5.0",
    "liquidjs": "^9.31.0",
    "pino": "^7.6.0",
    "pino-pretty": "^7.3.0",
    "point-of-view": "^4.16.0"
  },
  "devDependencies": {
    "@sysdotini/eslint-config": "^3.1.1",
    "@types/node": "^16.11.15",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
